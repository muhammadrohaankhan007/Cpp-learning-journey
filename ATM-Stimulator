#include <iostream>
using namespace std;

int main()
{
    int deposit, withdraw, key;
    int balance = 0;
    cout << "==== ATM Simulator =====" << endl;
    cout << endl;

    while (true)
    {
        cout << "Press 1 for Deposit" << endl;
        cout << "Press 2 for Withdrawal" << endl;
        cout << "Press 3 to Check Balance" << endl;
        cout << endl;

        cout << "Enter your Key: ";
        cin >> key;

        switch (key)
        {
        case 1:
            cout << "Enter the Deposit Amount: ";
            cin >> deposit;
            balance += deposit;
            cout << "Your Amount has been successfully deposited!" << endl;
            cout << "Your Current Balance: " << balance << endl;
            break;

        case 2:
            cout << "Enter Withdrawal Amount: ";
            cin >> withdraw;
            if (balance >= withdraw)
            {
                balance -= withdraw;
                cout << "Your Amount has been successfully withdrawn!" << endl;
                cout << "Your Current Balance: " << balance << endl;
            }
            else
            {
                cout << "Insufficient Balance!" << endl;
            }
            break;

        case 3:
            cout << "Your Current Balance: " << balance << endl;
            break;

        default:
            cout << "Wrong Key, Please Try Again!" << endl;
        }

        cout << endl;
    }
}
