#include <iostream>
using namespace std;

int main() {
    int choice, obtained_marks, total_marks = 0, percentage;
    int num1, num2, choice2;
    int start, end, even_count = 0, odd_count = 0;
    int total = 500;

    cout << "====== Student Utility Dashboard ====" << endl;
    cout << "Press 1 to Calculate Grade" << endl;
    cout << "Press 2 to Math Operations" << endl;
    cout << "Press 3 to Analyze Number" << endl;
    cout << "Press 4 to Exit" << endl;
    cout << endl;

    cout << "Enter your choice: ";
    cin >> choice;
    cout << endl;

    while (true)
    {
        switch (choice)
        {
        case 1:
            total_marks = 0; // reset before use
            for (int i = 1; i <= 5; i++)
            {
                cout << "Enter your Marks for Subject Number " << i << ": ";
                cin >> obtained_marks;
                total_marks += obtained_marks;
            }

            percentage = (total_marks * 100) / total;

            cout << "The Total Marks is: " << total_marks << endl;
            cout << "The Total Percentage is: " << percentage << "%" << endl;

            if (percentage >= 80)
            {
                cout << "Your grade is A" << endl;
            }
            else if (percentage >= 70 && percentage <= 79)
            {
                cout << "Your grade is B!" << endl;
            }
            else if (percentage >= 60 && percentage <= 69)
            {
                cout << "Your grade is C!" << endl;
            }
            else
            {
                cout << "You are Sadly Failed!" << endl;
            }
            break;

        case 2:
            cout << "Press 1 for Addition!" << endl;
            cout << "Press 2 for Subtraction!" << endl;
            cout << "Press 3 for Multiplication!" << endl;
            cout << "Press 4 for Division!" << endl;
            cout << "Press 5 to come back to the Main Menu!" << endl;

            cout << "Enter your operation choice: ";
            cin >> choice2;

            cout << "Enter the number 1: ";
            cin >> num1;
            cout << "Enter the number 2: ";
            cin >> num2;

            switch (choice2)
            {
            case 1:
                cout << "You've chosen Addition!" << endl;
                cout << "The Sum is: " << num1 + num2 << endl;
                break;
            case 2:
                cout << "You've chosen Subtraction!" << endl;
                cout << "The Result is: " << num1 - num2 << endl;
                break;
            case 3:
                cout << "You've chosen Multiplication!" << endl;
                cout << "The Result is: " << num1 * num2 << endl;
                break;
            case 4:
                cout << "You've chosen Division!" << endl;
                if (num2 != 0)
                    cout << "The Result is: " << num1 / num2 << endl;
                else
                    cout << "Division by zero not allowed!" << endl;
                break;
            case 5:
                cout << "Going Back to the Main Menu!" << endl;
                return 0;
            default:
                cout << "Invalid Operation!" << endl;
                break;
            }
            break;

        case 3:
            cout << "===== Number Analyzer =====" << endl;

            cout << "Enter the Starting Number: ";
            cin >> start;
            cout << "Enter the Ending Number: ";
            cin >> end;

            even_count = 0;
            odd_count = 0;

            for (int i = start; i <= end; i++)
            {
                if (i % 2 == 0)
                {
                    cout << "Even number: " << i << endl;
                    even_count++;
                }
                else
                {
                    cout << "Odd number: " << i << endl;
                    odd_count++;
                }
            }

            cout << "Total Even Numbers: " << even_count << endl;
            cout << "Total Odd Numbers: " << odd_count << endl;
            break;

        case 4:
            cout << "Thank you for Using Student Utility Dashboard!" << endl;
            return 0;

        default:
            cout << "Invalid command, please try again!" << endl;
            break;
        }

        break;
    }

    return 0;
}
