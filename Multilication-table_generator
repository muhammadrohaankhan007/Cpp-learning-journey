#include <iostream>
#include <iomanip> 
using namespace std;

int main()
{
    string direction;
    int number;

    cout << "==== Multiplication Table Generator =====" << endl << endl;

    cout << "Enter the Number: ";
    cin >> number;
    cout << "Enter the Direction (asscending/descending): ";
    cin >> direction;

    if (direction == "descending")
    {
        for (int i = 1; i <= 10;i++)
        {
            cout << number << " x " << i << " = " << number * i << endl;
        }
    }

    else if (direction == "asscending")
    {
        for (int i = 10; i >= 1;i--)
        {
            cout << number << " x " << i << " = " << number * i << endl;
        }
    }
}
